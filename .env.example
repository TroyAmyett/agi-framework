# =============================================================================
# AGI-READY FRAMEWORK - ENVIRONMENT CONFIGURATION
# =============================================================================
#
# SETUP INSTRUCTIONS:
# 1. Copy this file: Copy-Item .env.example .env
# 2. Get your API keys from the links below
# 3. Replace the placeholder values
# 4. NEVER commit .env to git (it's in .gitignore)
#
# PLATFORM NOTES:
# - Node.js/Python: Use variables WITHOUT prefix (ANTHROPIC_API_KEY)
# - React (CRA): Use variables WITH REACT_APP_ prefix
# - Next.js: Use NEXT_PUBLIC_ prefix for client-side
# - Vite: Use VITE_ prefix for client-side
#
# =============================================================================

# =============================================================================
# API KEYS - BACKEND/UNIVERSAL (Node.js, Python, Server-side)
# =============================================================================

# Anthropic Claude API Key
# Get it from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# OpenAI API Key  
# Get it from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-key-here

# Google AI API Key (optional)
# Get it from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your-key-here

# =============================================================================
# API KEYS - REACT/FRONTEND (Create React App)
# =============================================================================
# Note: Create React App requires REACT_APP_ prefix for security
# These should have the SAME values as the non-prefixed versions above

# Anthropic Claude API Key (for React apps)
REACT_APP_ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# OpenAI API Key (for React apps)
REACT_APP_OPENAI_API_KEY=sk-your-key-here

# Google AI API Key (for React apps)
REACT_APP_GOOGLE_API_KEY=your-key-here

# =============================================================================
# MODEL CONFIGURATION - UNIVERSAL
# =============================================================================

# Default model to use
DEFAULT_MODEL=claude-sonnet-4-20250514

# Fallback model if primary fails
FALLBACK_MODEL=claude-haiku-4-20251001

# Maximum tokens per request
MAX_TOKENS=4096

# Temperature (0.0 - 1.0)
TEMPERATURE=0.7

# =============================================================================
# MODEL CONFIGURATION - REACT
# =============================================================================

REACT_APP_DEFAULT_MODEL=claude-sonnet-4-20250514
REACT_APP_FALLBACK_MODEL=claude-haiku-4-20251001
REACT_APP_MAX_TOKENS=4096
REACT_APP_TEMPERATURE=0.7

# =============================================================================
# APPLICATION SETTINGS - UNIVERSAL
# =============================================================================

# Environment (development, production, test)
NODE_ENV=development

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Maximum context tokens to use
MAX_CONTEXT_TOKENS=100000

# Enable debug mode (shows detailed logs)
DEBUG_MODE=false

# =============================================================================
# APPLICATION SETTINGS - REACT
# =============================================================================

REACT_APP_LOG_LEVEL=info
REACT_APP_MAX_CONTEXT_TOKENS=100000
REACT_APP_DEBUG_MODE=false

# =============================================================================
# COST MANAGEMENT - UNIVERSAL
# =============================================================================

# Daily budget limit in USD (0 = unlimited)
DAILY_BUDGET=0

# Warn when approaching this percentage of budget
BUDGET_WARNING_THRESHOLD=80

# Enable cost tracking
TRACK_COSTS=true

# =============================================================================
# COST MANAGEMENT - REACT
# =============================================================================

REACT_APP_DAILY_BUDGET=0
REACT_APP_BUDGET_WARNING_THRESHOLD=80
REACT_APP_TRACK_COSTS=true

# =============================================================================
# PERFORMANCE & RATE LIMITING - UNIVERSAL
# =============================================================================

# Maximum concurrent agent executions
MAX_CONCURRENT_AGENTS=5

# Request timeout in milliseconds
REQUEST_TIMEOUT_MS=30000

# Enable request caching
ENABLE_CACHING=true

# Cache TTL in seconds
CACHE_TTL=3600

# =============================================================================
# PERFORMANCE & RATE LIMITING - REACT
# =============================================================================

REACT_APP_MAX_CONCURRENT_AGENTS=5
REACT_APP_REQUEST_TIMEOUT_MS=30000
REACT_APP_ENABLE_CACHING=true
REACT_APP_CACHE_TTL=3600

# =============================================================================
# DEVELOPMENT - UNIVERSAL
# =============================================================================

# Port for development server
PORT=3000

# Enable DevTools
DEVTOOLS=true

# Mock API calls in development (don't hit real APIs)
MOCK_API=false

# =============================================================================
# DEVELOPMENT - REACT
# =============================================================================

REACT_APP_DEVTOOLS=true
REACT_APP_MOCK_API=false

# =============================================================================
# PYTHON CONFIGURATION (if using Python components)
# =============================================================================
# Python uses the non-prefixed variables (same as Node.js)
# Example in Python:
#   import os
#   from dotenv import load_dotenv
#   load_dotenv()
#   api_key = os.getenv('ANTHROPIC_API_KEY')

# =============================================================================
# SECURITY NOTES
# =============================================================================
# 
# ⚠️  NEVER commit .env to git - it contains your secret keys!
# ⚠️  .env is gitignored and stays on your computer only
# ⚠️  For production (Vercel, etc), add these in your dashboard
# ⚠️  Revoke and rotate keys regularly for security
# ⚠️  If keys are exposed, revoke immediately at the provider dashboard
#
# Platform-specific variable usage:
# - Node.js scripts: Use ANTHROPIC_API_KEY (no prefix)
# - Python scripts: Use ANTHROPIC_API_KEY (no prefix)
# - React apps: Use REACT_APP_ANTHROPIC_API_KEY (with prefix)
# - Next.js client: Use NEXT_PUBLIC_ANTHROPIC_API_KEY
# - Vite apps: Use VITE_ANTHROPIC_API_KEY
#
# =============================================================================
