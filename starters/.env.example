# =============================================================================
# MODEL PROVIDERS - Multiple LLM Support
# =============================================================================

# Anthropic (Claude) - Primary
REACT_APP_ANTHROPIC_API_KEY=
REACT_APP_ANTHROPIC_DEFAULT_MODEL=claude-sonnet-4

# OpenAI (GPT) - Secondary/Embeddings
REACT_APP_OPENAI_API_KEY=
REACT_APP_OPENAI_DEFAULT_MODEL=gpt-4

# Google (Gemini) - Optional
REACT_APP_GOOGLE_API_KEY=
REACT_APP_GOOGLE_DEFAULT_MODEL=gemini-pro

# Local Models (Ollama) - Development/Testing
REACT_APP_LOCAL_ENDPOINT=http://localhost:11434
REACT_APP_LOCAL_DEFAULT_MODEL=llama2

# =============================================================================
# ROUTING & FALLBACK STRATEGY
# =============================================================================

# Which provider to use by default (anthropic, openai, google, local)
REACT_APP_DEFAULT_PROVIDER=anthropic

# Enable automatic fallback to other providers on failure
REACT_APP_ENABLE_FALLBACK=true

# Routing strategy (cost-optimized, latency-optimized, quality-optimized)
REACT_APP_ROUTING_STRATEGY=cost-optimized

# =============================================================================
# COST MANAGEMENT
# =============================================================================

# Daily budget per provider (USD, 0 = unlimited)
REACT_APP_ANTHROPIC_DAILY_BUDGET=50
REACT_APP_OPENAI_DAILY_BUDGET=20
REACT_APP_GOOGLE_DAILY_BUDGET=0

# Total daily budget across all providers
REACT_APP_TOTAL_DAILY_BUDGET=100

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

REACT_APP_LOG_LEVEL=info
REACT_APP_MAX_CONTEXT_TOKENS=100000
REACT_APP_DEBUG_MODE=false

# =============================================================================
# MEMORY SYSTEMS
# =============================================================================

REACT_APP_VECTOR_DB_TYPE=pinecone
REACT_APP_VECTOR_DB_URL=
REACT_APP_VECTOR_DB_API_KEY=

REACT_APP_EPISODIC_DB_URL=postgresql://user:password@localhost:5432/db

# =============================================================================
# PERFORMANCE
# =============================================================================

REACT_APP_MAX_CONCURRENT_AGENTS=5
REACT_APP_REQUEST_TIMEOUT_MS=30000
REACT_APP_ENABLE_CACHING=true
REACT_APP_CACHE_TTL=3600